<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BadgerClan.MauiController.MainPage"
    Title="Bot Strategy Control">

    <VerticalStackLayout Padding="20">
        
        <Label x:Name="CurrentEndpointLabel"
               Text="Current Endpoint: (none)"
               FontSize="20"
               Margin="0, 10, 0, 10"
               HorizontalOptions="Center" />

        <Picker x:Name="EndpointPicker"
                Title="Select API Endpoint"
                ItemsSource="{Binding AvailableEndpoints}"
                ItemDisplayBinding="{Binding Nickname}"
                SelectedIndexChanged="OnEndpointSelected"
                HorizontalOptions="FillAndExpand"
                WidthRequest="150"
                Margin="0, 20, 0, 20"/>
        
        <Label x:Name="CurrentApiLabel"
               Text="Current: "
               FontSize="18"
               HorizontalOptions="Center" />

        <Label 
            Text="Select Bot Strategy"
            FontSize="22"
            HorizontalOptions="Center" />

        <Button 
            Text="Aggressive"
            Clicked="OnAggressiveClicked"
            Margin="0,10,0,0"
            WidthRequest="250"/>

        <Button 
            Text="Defensive"
            Clicked="OnDefensiveClicked"
            Margin="0,10,0,0"
            WidthRequest="250" />

        <Button 
            Text="Random"
            Clicked="OnRandomClicked"
            Margin="0,10,0,0"
            WidthRequest="250"/>

        <Label 
            x:Name="CurrentStrategyLabel"
            Text="Loading current strategy..."
            FontSize="18"
            TextColor="Green"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>
